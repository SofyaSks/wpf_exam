<Window x:Class="wpf_exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="260" Width="500" FontSize="24">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Control.Margin" Value="10"/>
            <Setter Property="Control.Padding" Value="10"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <StackPanel>
            <Button Click="Button_Click_Income_Outcome" Background="LightBlue">Доходы и расходы</Button>
            <Button Click="Button_Click_Infographics" Background="LightPink">Инфографика</Button>
            <Button Click="Button_Click_Exit" Background="LightYellow">Выйти</Button>
        </StackPanel>
    </DockPanel>
</Window>
